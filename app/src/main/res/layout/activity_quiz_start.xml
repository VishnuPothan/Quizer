<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_start"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Rules"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimaryDark">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:fontFamily="monospace"
            android:text="1 : There are 10 questions ."
            android:textAlignment="textStart"
            android:textColor="@color/Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="2 : Each have a timer with it."
            android:textAlignment="textStart"
            android:textColor="@color/Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:fontFamily="monospace"
            android:text="3 : Answer the question with in it."
            android:textAlignment="textStart"
            android:textColor="@color/Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:fontFamily="monospace"
            android:text="4 : No malpractice allowed."
            android:textAlignment="textStart"
            android:textColor="@color/Text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="5 :  The mark for each question is how fast you answer it ."
            android:textAlignment="textStart"
            android:textColor="@color/Text"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Are you ready ? "
        android:textColor="@color/Text"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start" />

</LinearLayout>